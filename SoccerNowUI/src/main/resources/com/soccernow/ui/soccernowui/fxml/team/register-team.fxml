<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="400.0" spacing="20.0" styleClass="container"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.soccernow.ui.soccernowui.controller.team.RegisterTeamController"
      style="-fx-font-family: 'JetBrains Mono'; -fx-font-size: 12;">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <ToolBar prefHeight="40.0" prefWidth="400.0">
        <items>
            <Button fx:id="BackButton" onAction="#onBackClick" mnemonicParsing="false" text="&lt; Back" />
            <Label text="Register &gt; Team" />
        </items>
    </ToolBar>

    <Label text="Register New Team" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Team Name:"/>
        <TextField fx:id="teamNameField" promptText="Enter team name" prefWidth="200"/>
    </HBox>

    <VBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Players:"/>
        <ListView fx:id="playerListView" prefHeight="150" prefWidth="300"/>
        <HBox spacing="10">
            <Button text="Add Player" onAction="#onAddPlayerClick" />
            <Button text="Remove Selected" onAction="#onRemovePlayerClick" />
        </HBox>
    </VBox>

    <HBox spacing="20" alignment="CENTER">
        <Button text="Cancel" onAction="#onCancelClick" styleClass="btn btn-secondary"/>
        <Button text="Register Team" onAction="#onRegisterClick" styleClass="btn btn-primary"/>
    </HBox>
</VBox>
