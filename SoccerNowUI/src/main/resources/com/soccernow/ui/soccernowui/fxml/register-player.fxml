<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.bootstrapfx.scene.layout.Panel?> <VBox alignment="CENTER" spacing="20.0"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.soccernow.ui.soccernowui.controller.RegisterPlayer"
      styleClass="container"
      prefHeight="600.0" prefWidth="800.0"> <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Panel text="Register New Player" prefWidth="450">
        <VBox spacing="15.0">
            <padding>
                <Insets top="15.0" right="25.0" bottom="20.0" left="25.0"/>
            </padding>

            <VBox spacing="8.0" styleClass="form-group">
                <Label text="Player Name:" styleClass="form-label"/>
                <TextField fx:id="name" styleClass="form-control" promptText="Enter player name"/>
            </VBox>

            <VBox spacing="8.0" styleClass="form-group">
                <Label text="Preferred Position:" styleClass="form-label"/>
                <ComboBox fx:id="positionComboBox"
                          promptText="None"
                          styleClass="form-control"
                          maxWidth="Infinity"/> </VBox>

            <VBox spacing="8.0" styleClass="form-group" alignment="CENTER">
                <padding>
                    <Insets top="15.0"/> </padding>
                <Button fx:id="registerButton" onAction="#onRegisterClick"
                        text="Register Player"
                        styleClass="btn btn-primary btn-lg"/> </VBox>
        </VBox>
    </Panel>
</VBox>
