<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="editTournamentVBox"
      alignment="CENTER"
      prefHeight="600.0"
      prefWidth="400.0"
      spacing="20.0"
      styleClass="container"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.soccernow.ui.soccernowui.controller.tournament.EditTournamentController"
      style="-fx-font-family: 'JetBrains Mono'; -fx-font-size: 12;">

    <padding>
        <Insets top="20" bottom="20" left="10" right="10"/>
    </padding>

    <ToolBar prefHeight="40.0" prefWidth="360.0">
        <items>
            <Button fx:id="BackButton" onAction="#onBackClick" mnemonicParsing="false" text="&lt; Back"/>
            <Label text="Edit &gt; Tournament"/>
        </items>
    </ToolBar>

    <Label text="Edit Tournament Details" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Tournament Name:"/>
        <TextField fx:id="tournamentNameField" promptText="Tournament name" prefWidth="200"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Status:"/>
        <ComboBox fx:id="statusComboBox" prefWidth="200"/>
    </HBox>

    <VBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Games:"/>
        <ListView fx:id="gameListView" prefHeight="150" prefWidth="260"/>
        <HBox spacing="10" alignment="CENTER">
            <Button text="Add Game" onAction="#onAddGameClick" prefWidth="140"/>
            <Button text="Cancel Game" onAction="#onCancelClick" prefWidth="140"/>
        </HBox>
    </VBox>

    <HBox spacing="20" alignment="CENTER">
        <Button text="Save Changes" onAction="#onSaveClick" styleClass="btn btn-primary"/>
    </HBox>
</VBox>
