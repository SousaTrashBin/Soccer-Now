<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="400.0" spacing="20.0" style="-fx-font-family: 'JetBrains Mono'; -fx-font-size: 12;" styleClass="container" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.soccernow.ui.soccernowui.controller.home.LoginController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <ToolBar prefHeight="40.0" prefWidth="400.0">
            <items>
                <Label text="SoccerNow" />
            </items>
    </ToolBar>

    <GridPane alignment="CENTER" hgap="10" vgap="10">
        <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1" />

        <TextField fx:id="usernameField" prefHeight="25.0" prefWidth="149.0" promptText="Enter username" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <PasswordField fx:id="passwordField" promptText="Enter password" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Button maxWidth="150" onAction="#onLoginClick" text="Login" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    </GridPane>

</VBox>
