<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER"
      prefHeight="600.0"
      prefWidth="400.0"
      spacing="20.0"
      styleClass="container"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.soccernow.ui.soccernowui.controller.player.EditPlayerController"
      style="-fx-font-family: 'JetBrains Mono'; -fx-font-size: 12;">

    <padding>
        <Insets top="20" bottom="20" left="10" right="10"/>
    </padding>

    <ToolBar prefHeight="40.0" prefWidth="360.0">
        <items>
            <Button fx:id="BackButton" onAction="#onBackClick" mnemonicParsing="false" text="&lt; Back"/>
            <Label text="Edit &gt; Player"/>
        </items>
    </ToolBar>

    <Label text="Edit Player Details" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Player Name:"/>
        <TextField fx:id="playerNameField" promptText="Enter player name" prefWidth="220"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Position:"/>
        <ComboBox fx:id="positionComboBox" promptText="Select position" prefWidth="250"/>
    </HBox>

    <VBox spacing="10" alignment="CENTER_LEFT">
         <Label text="Players's teams:"/>
    </VBox>

    <TableView fx:id="playerTeamsListView" prefHeight="180" prefWidth="380">
         <columns>
              <TableColumn fx:id="playerTeamsIdColumn" text="ID" prefWidth="190"/>
              <TableColumn fx:id="playerTeamsStatusColumn" text="Status" prefWidth="190"/>
         </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
         <Button text="Remove Team" onAction="#onRemoveTeamClick" prefWidth="120"/>
    </HBox>

    <VBox spacing="10" alignment="CENTER_LEFT">
         <Label text="Other teams:"/>
    </VBox>

    <TableView fx:id="otherTeamsListView" prefHeight="180" prefWidth="380">
         <columns>
             <TableColumn fx:id="otherTeamsIdColumn" text="ID" prefWidth="190"/>
             <TableColumn fx:id="otherTeamsStatusColumn" text="Status" prefWidth="190"/>
         </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
         <Button text="Add Team" onAction="#onAddTeamClick" prefWidth="90"/>
    </HBox>

    <HBox spacing="20" alignment="CENTER_RIGHT">
        <Button text="Save Changes" onAction="#onSaveClick" styleClass="btn btn-primary"/>
    </HBox>
</VBox>
