<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<VBox alignment="TOP_CENTER"
      prefHeight="800.0"
      prefWidth="500.0"
      spacing="20.0"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.soccernow.ui.soccernowui.controller.game.RegisterGameResultsController">

    <padding>
        <Insets top="20.0" bottom="20.0" left="20.0" right="20.0"/>
    </padding>

    <ToolBar prefHeight="40.0" prefWidth="460.0">
        <items>
            <Button fx:id="BackButton" onAction="#onBackClick" mnemonicParsing="false" text="&lt; Back"/>
            <Label text="Register Game Results"/>
        </items>
    </ToolBar>

    <Label text="Register Game Results" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <VBox spacing="10" alignment="TOP_LEFT">

    <Label text="Player's Stats:" style="-fx-font-size: 16; -fx-font-weight: bold;"/>

        <HBox spacing="10" alignment="CENTER">
            <Label text="Select Team:"/>
            <ComboBox fx:id="teamComboBox" prefWidth="200" promptText="Choose a team"/>

        </HBox>
        <HBox spacing="10" alignment="CENTER">
                    <Label text="Select Player:"/>
                    <ComboBox fx:id="playerComboBox" prefWidth="200" promptText="Choose a player"/>
                </HBox>

        <HBox spacing="10" alignment="CENTER">
            <Label text="Goals:"/>
            <TextField fx:id="playerGoalsField" prefWidth="60" promptText="0"/>
        </HBox>

        <Label text="Add Card:"/>
        <HBox spacing="10" alignment="CENTER">
            <Label text="Card Type:"/>
            <ComboBox fx:id="cardTypeComboBox" prefWidth="80" promptText="Type"/>

            <Label text="Referee:"/>
            <ComboBox fx:id="refereeComboBox" prefWidth="150" promptText="Select Referee"/>
        </HBox>

        <HBox spacing="20" alignment="CENTER">
              <Button text="Add Card" onAction="#onAddCardClick" prefWidth="120"/>
        </HBox>

        <VBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Player's Cards:"/>
                </VBox>

                <TableView fx:id="playerCardsTableView" prefHeight="180" prefWidth="380">
                    <columns>
                        <TableColumn fx:id="playerCardsTypeColumn" text="Card Type" prefWidth="200"/>
                        <TableColumn fx:id="playerCardsRefereeNameColumn" text="Referee Name" prefWidth="300"/>
                    </columns>
                </TableView>

        <HBox spacing="20" alignment="CENTER">
            <Button text="Save Player Stats" onAction="#onSavePlayerStatsClick" prefWidth="180"/>
        </HBox>
    </VBox>

    <Separator/>

    <VBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Saved Player Stats:" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
    </VBox>
                    <TableView fx:id="playerStatsTableView" prefHeight="180" prefWidth="380">
                        <columns>
                            <TableColumn fx:id="playerStatsIdColumn" text="Player Id" prefWidth="140"/>
                            <TableColumn fx:id="playerStatsNameColumn" text="Player Name" prefWidth="200"/>
                            <TableColumn fx:id="playerStatsGoalsColumn" text="Player Goals" prefWidth="100"/>
                        </columns>
                    </TableView>

    <HBox spacing="20" alignment="CENTER_RIGHT">
        <Button text="Register Game Result" onAction="#onSaveGameClick" prefWidth="200"/>
    </HBox>

</VBox>
