<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<VBox alignment="TOP_CENTER"
      prefHeight="600.0"
      prefWidth="400.0"
      spacing="20.0"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.soccernow.ui.soccernowui.controller.game.RegisterGameResultsController">

    <padding>
        <Insets top="20.0" bottom="20.0" left="20.0" right="20.0"/>
    </padding>

    <ToolBar prefHeight="40.0" prefWidth="460.0">
        <items>
            <Button fx:id="BackButton" onAction="#onBackClick" mnemonicParsing="false" text="&lt; Back"/>
            <Label text="Register Game Results"/>
        </items>
    </ToolBar>

    <Label text="Register Game Results" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <HBox spacing="15" alignment="CENTER_LEFT">
        <Label text="Team One Goals:"/>
        <TextField fx:id="teamOneGoalsField" prefWidth="60" promptText="0"/>
        <Label text="Team Two Goals:"/>
        <TextField fx:id="teamTwoGoalsField" prefWidth="60" promptText="0"/>
    </HBox>

    <VBox spacing="10" alignment="TOP_LEFT">
    <Separator/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Select Team:"/>
            <ComboBox fx:id="teamComboBox" prefWidth="200" promptText="Choose a team"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Select Player:"/>
            <ComboBox fx:id="playerComboBox" prefWidth="200" promptText="Choose a player"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Goals:"/>
            <TextField fx:id="playerGoalsField" prefWidth="60" promptText="0"/>
        </HBox>

        <Separator/>

        <Label text="Add Card:"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Card Type:"/>
            <ComboBox fx:id="cardTypeComboBox" prefWidth="80" promptText="Type"/>

            <Label text="Referee:"/>
            <ComboBox fx:id="refereeComboBox" prefWidth="150" promptText="Select Referee"/>
        </HBox>


        <HBox spacing="10" alignment="CENTER_RIGHT">
              <Button text="Add Card" onAction="#onAddCardClick"/>
        </HBox>

        <Label text="Player's Cards:"/>
        <ListView fx:id="playerCardsListView" prefHeight="100" prefWidth="300"/>

        <HBox spacing="20" alignment="CENTER_RIGHT">
            <Button text="Save Player Stats" onAction="#onSavePlayerStatsClick"/>
        </HBox>
    </VBox>

    <HBox spacing="20" alignment="CENTER">
        <Button text="Register Game Result" onAction="#onSaveGameClick"/>
    </HBox>

</VBox>
