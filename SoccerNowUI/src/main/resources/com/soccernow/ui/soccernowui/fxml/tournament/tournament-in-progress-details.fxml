<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="400.0" spacing="20.0" style="-fx-font-family: 'JetBrains Mono'; -fx-font-size: 12;" styleClass="container" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.soccernow.ui.soccernowui.controller.tournament.TournamentInProgressDetailsController">

    <padding>
        <Insets bottom="20" left="10" right="10" top="20" />
    </padding>

    <ToolBar prefHeight="40.0" prefWidth="360.0">
        <Button fx:id="BackButton" mnemonicParsing="false" onAction="#onBackClick" text="&lt; Back" />
        <Label text="Edit &gt; Tournament in Progress" />
    </ToolBar>

    <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Tournament in Progress Details" />

    <VBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Tournament Games:" />
    </VBox>

    <TableView fx:id="tournamentGamesTableView" prefHeight="180" prefWidth="380">
                <columns>
                    <TableColumn fx:id="tournamentGamesIdColumn" prefWidth="190" text="ID" />
                    <TableColumn fx:id="tournamentGamesStatusColumn" prefWidth="190" text="Status" />
                </columns>
            </TableView>
    <HBox alignment="CENTER" spacing="10">
                <Button onAction="#onCancelGameClick" prefWidth="140" text="Cancel Game" />
                <Button onAction="#onRemoveGameClick" prefWidth="140" text="Remove Game" />
            </HBox>

    <VBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Other Games:" />
        </VBox>

    <TableView fx:id="otherGamesTableView" prefHeight="180" prefWidth="380">
                    <columns>
                        <TableColumn fx:id="otherGamesIdColumn" prefWidth="190" text="ID" />
                        <TableColumn fx:id="otherGamesStatusColumn" prefWidth="190" text="Status" />
                    </columns>
                </TableView>
    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#onAddGameClick" prefWidth="140" text="Add Game"/>
    </HBox>

    <HBox alignment="CENTER" spacing="20">
        <Button onAction="#onSaveClick" prefWidth="140" text="Save Game Changes"/>
        <Button onAction="#onEndTournamentClick" styleClass="btn btn-primary" text="End Tournament" />
    </HBox>
</VBox>
