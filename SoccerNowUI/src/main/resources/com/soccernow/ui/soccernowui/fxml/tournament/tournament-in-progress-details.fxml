<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER"
      prefHeight="600.0"
      prefWidth="400.0"
      spacing="20.0"
      styleClass="container"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.soccernow.ui.soccernowui.controller.tournament.OpenTournamentDetailsController"
      style="-fx-font-family: 'JetBrains Mono'; -fx-font-size: 12;">

    <padding>
        <Insets top="20" bottom="20" left="10" right="10"/>
    </padding>

    <ToolBar prefHeight="40.0" prefWidth="360.0">
        <items>
            <Button fx:id="BackButton" onAction="#onBackClick" mnemonicParsing="false" text="&lt; Back"/>
            <Label text="Edit &gt; Tournament in Progress"/>
        </items>
    </ToolBar>

    <Label text="Tournament in Progress Details" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <VBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Tournament Games:"/>
    </VBox>

    <TableView fx:id="tournamentGamesTableView" prefHeight="180" prefWidth="380">
                <columns>
                    <TableColumn fx:id="tournamentGamesIdColumn" text="ID" prefWidth="190"/>
                    <TableColumn fx:id="tournamentGamesStatusColumn" text="Status" prefWidth="190"/>
                </columns>
            </TableView>
    <HBox spacing="10" alignment="CENTER">
                <Button text="Cancel Game" onAction="#onCancelGameClick" prefWidth="140"/>
                <Button text="Remove Game" onAction="#onRemoveGameClick" prefWidth="140"/>
            </HBox>

    <VBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Other Games:"/>
        </VBox>

    <TableView fx:id="otherGamesTableView" prefHeight="180" prefWidth="380">
                    <columns>
                        <TableColumn fx:id="otherGamesIdColumn" text="ID" prefWidth="190"/>
                        <TableColumn fx:id="otherGamesStatusColumn" text="Status" prefWidth="190"/>
                    </columns>
                </TableView>
    <HBox spacing="10" alignment="CENTER">
                    <Button text="Add Game" onAction="#onAddGameClick" prefWidth="140"/>
     </HBox>

    <HBox spacing="20" alignment="CENTER_RIGHT">
        <Button text="End Tournament" onAction="#onEndTournamentClick" styleClass="btn btn-primary"/>
    </HBox>
</VBox>
