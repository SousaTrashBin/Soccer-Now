<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<VBox fx:id="editGameVBox"
      alignment="CENTER"
      prefHeight="600.0"
      prefWidth="400.0"
      spacing="20.0"
      styleClass="container"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.soccernow.ui.soccernowui.controller.game.EditGameController"
      style="-fx-font-family: 'JetBrains Mono'; -fx-font-size: 12;">

    <padding>
        <Insets top="20.0" bottom="20.0" left="20.0" right="20.0"/>
    </padding>

    <ToolBar prefHeight="40.0" prefWidth="360.0">
        <items>
            <Button fx:id="BackButton" onAction="#onBackClick" mnemonicParsing="false" text="&lt; Back"/>
            <Label text="Edit &gt; Game"/>
        </items>
    </ToolBar>

    <Label text="Edit Game Details" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Team One:"/>
        <ComboBox fx:id="teamOneComboBox" promptText="Select Team One" prefWidth="200"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Team Two:"/>
        <ComboBox fx:id="teamTwoComboBox" promptText="Select Team Two" prefWidth="200"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Primary Referee:"/>
        <ComboBox fx:id="primaryRefereeComboBox" promptText="Select Referee" prefWidth="200"/>
    </HBox>

    <VBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Secondary Referees:"/>
        <ListView fx:id="secondaryRefereesListView" prefHeight="100" prefWidth="260"/>
    </VBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Address:"/>
        <ComboBox fx:id="addressComboBox" promptText="Select Address" prefWidth="200"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Date and Time:"/>
        <DatePicker fx:id="datePicker"/>
        <TextField fx:id="timeField" promptText="HH:MM" prefWidth="80"/>
    </HBox>

    <HBox spacing="20" alignment="CENTER">
        <Button text="Cancel" onAction="#onCancelClick" styleClass="btn btn-secondary"/>
        <Button text="Save Changes" onAction="#onSaveGameClick" styleClass="btn btn-primary"/>
    </HBox>
</VBox>
