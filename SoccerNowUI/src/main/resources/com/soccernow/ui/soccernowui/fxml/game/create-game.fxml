<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="400.0" spacing="20.0" styleClass="container"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.soccernow.ui.soccernowui.controller.game.CreateGame"
      style="-fx-font-family: 'JetBrains Mono'; -fx-font-size: 12;">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <ToolBar prefHeight="40.0" prefWidth="400.0">
        <items>
            <Button fx:id="BackButton" onAction="#onBackClick" mnemonicParsing="false" text="&lt; Back" />
            <Label text="Create &gt; Game" />
        </items>
    </ToolBar>


    <Label text="Create Game" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Team One:"/>
        <ComboBox fx:id="teamOneComboBox" promptText="Select Team One" prefWidth="300"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Team Two:"/>
        <ComboBox fx:id="teamTwoComboBox" promptText="Select Team Two" prefWidth="300"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Primary Referee:"/>
        <ComboBox fx:id="primaryRefereeComboBox" promptText="Select Referee" prefWidth="300"/>
    </HBox>

    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label text="Secondary Referees:"/>
        <VBox fx:id="secondaryRefereesContainer" spacing="5" prefWidth="300"/>
    </VBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Tournament:"/>
        <ComboBox fx:id="tournamentComboBox" promptText="Select Tournament" prefWidth="300"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Address:"/>
            <ComboBox fx:id="addressComboBox" promptText="Select Tournament" prefWidth="300"/>
        </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Date and Time:"/>
        <DatePicker fx:id="datePicker"/>
        <TextField fx:id="timeField" promptText="HH:MM" prefWidth="80"/>
    </HBox>

    <HBox spacing="15" alignment="CENTER">
        <Button text="Back" onAction="#onBackClick" styleClass="btn btn-secondary"/>
        <Button text="Create Game" onAction="#onCreateGameClick" styleClass="btn btn-primary"/>
    </HBox>

</VBox>
