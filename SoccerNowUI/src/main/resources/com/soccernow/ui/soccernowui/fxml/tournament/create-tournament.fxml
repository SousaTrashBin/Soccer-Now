<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="400.0" spacing="20.0" styleClass="container"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.soccernow.ui.soccernowui.controller.tournament.CreateTournamentController"
      style="-fx-font-family: 'JetBrains Mono'; -fx-font-size: 12;">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <ToolBar prefHeight="40.0" prefWidth="400.0">
        <items>
            <Button fx:id="BackButton" onAction="#onBackClick" mnemonicParsing="false" text="&lt; Back" />
            <Label text="Create &gt; Tournament" />
        </items>
    </ToolBar>

    <Label text="Create New Tournament" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Tournament Name:"/>
        <TextField fx:id="tournamentNameField" promptText="Enter tournament name" prefWidth="300"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Status:"/>
        <ComboBox fx:id="statusComboBox" prefWidth="200"/>
    </HBox>

    <VBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Games:"/>
        <ListView fx:id="gameListView" prefHeight="120" prefWidth="300"/>
        <HBox spacing="10">
            <Button text="Add Game" onAction="#onAddGameClick"/>
            <Button text="Remove Selected" onAction="#onRemoveGameClick"/>
        </HBox>
    </VBox>

    <HBox spacing="20" alignment="CENTER">
        <Button text="Cancel" onAction="#onCancelClick" styleClass="btn btn-secondary"/>
        <Button text="Create Tournament" onAction="#onCreateClick" styleClass="btn btn-primary"/>
    </HBox>
</VBox>
